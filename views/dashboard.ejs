    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        
        // Tab switching
        function showTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }
        
        // Settings form submission
        document.getElementById('settingsForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const settings = Object.fromEntries(formData);
            
            // Convert checkboxes to boolean
            Object.keys(settings).forEach(key => {
                if (settings[key] === 'on') settings[key] = true;
                if (settings[key] === undefined) settings[key] = false;
            });
            
            try {
                const response = await fetch('/api/settings', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(settings)
                });
                
                const result = await response.json();
                if (result.success) {
                    showAlert('Settings saved successfully!', 'success');
                } else {
                    showAlert(result.error, 'danger');
                }
            } catch (error) {
                showAlert('Error saving settings', 'danger');
            }
        });
        
        // AI form submission
        document.getElementById('aiForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const aiSettings = Object.fromEntries(formData);
            
            // Convert checkboxes to boolean
            Object.keys(aiSettings).forEach(key => {
                if (aiSettings[key] === 'on') aiSettings[key] = true;
                if (aiSettings[key] === undefined) aiSettings[key] = false;
            });
            
            try {
                const response = await fetch('/api/settings', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(aiSettings)
                });
                
                const result = await response.json();
                if (result.success) {
                    showAlert('AI settings saved successfully!', 'success');
                } else {
                    showAlert(result.error, 'danger');
                }
            } catch (error) {
                showAlert('Error saving AI settings', 'danger');
            }
        });
        
        // Test AI connection
        async function testAI() {
            showAlert('Testing AI connection...', 'info');
            
            try {
                const response = await fetch('/api/test-ai', { method: 'POST' });
                const result = await response.json();
                
                if (result.success) {
                    showAlert('AI connection successful!', 'success');
                } else {
                    showAlert('AI connection failed: ' + result.error, 'danger');
                }
            } catch (error) {
                showAlert('Error testing AI connection', 'danger');
            }
        }
        
        // Restart bot
        async function restartBot() {
            if (confirm('Are you sure you want to restart the bot?')) {
                showAlert('Restarting bot...', 'info');
                
                try {
                    const response = await fetch('/api/restart', { method: 'POST' });
                    const result = await response.json();
                    
                    if (result.success) {
                        showAlert('Bot is restarting...', 'success');
                    } else {
                        showAlert('Failed to restart bot: ' + result.error, 'danger');
                    }
                } catch (error) {
                    showAlert('Error restarting bot', 'danger');
                }
            }
        }
        
        // Export settings
        async function exportSettings() {
            try {
                const response = await fetch('/api/settings');
                const settings = await response.json();
                
                const blob = new Blob([JSON.stringify(settings, null, 2)], { type: 'application/json' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'ladybug-settings.json';
                a.click();
                
                showAlert('Settings exported successfully!', 'success');
            } catch (error) {
                showAlert('Error exporting settings', 'danger');
            }
        }
        
        // Show alert
        function showAlert(message, type) {
            const alert = document.createElement('div');
            alert.className = `alert-custom alert-${type}`;
            alert.innerHTML = message;
            alert.style.position = 'fixed';
            alert.style.top = '20px';
            alert.style.right = '20px';
            alert.style.zIndex = '9999';
            alert.style.maxWidth = '300px';
            
            document.body.appendChild(alert);
            
            setTimeout(() => {
                alert.remove();
            }, 5000);
        }
        
        // Update stats
        function updateStats() {
            // Simulate stats updates
            document.getElementById('messageCount').textContent = 
                Math.floor(Math.random() * 1000);
            document.getElementById('userCount').textContent = 
                Math.floor(Math.random() * 100);
            
            // Update uptime
            const uptime = Math.floor(Math.random() * 24);
            document.getElementById('uptime').textContent = `${uptime}h`;
            
            // Update memory usage
            const memoryUsage = Math.floor(Math.random() * 80);
            document.getElementById('memoryUsage').textContent = `${memoryUsage}%`;
            document.getElementById('memoryBar').style.width = `${memoryUsage}%`;
            
            // Update CPU usage
            const cpuUsage = Math.floor(Math.random() * 60);
            document.getElementById('cpuUsage').textContent = `${cpuUsage}%`;
            document.getElementById('cpuBar').style.width = `${cpuUsage}%`;
        }
        
        // Initialize
        updateStats();
        setInterval(updateStats, 30000); // Update every 30 seconds
        
        // Update last update time
        setInterval(() => {
            const now = new Date();
            document.getElementById('lastUpdate').textContent = 
                now.toLocaleTimeString();
        }, 60000);
    </script>
